<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RelativelyCentered" parent="WrapContent">
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="RelativelyCentered.Gone">
        <item name="android:visibility">gone</item>
    </style>

    <style name="SearchBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/interactive_item_height</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingStart">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="BooksGrid" parent="MatchParent">
        <item name="android:clipToPadding">false</item>
        <item name="android:horizontalSpacing">@dimen/activity_horizontal_margin</item>
        <item name="android:numColumns">2</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:verticalSpacing">@dimen/activity_vertical_margin</item>
    </style>

    <style name="EmptyText" parent="RelativelyCentered.Gone" />

    <style name="ProgressBar" parent="Base.Widget.AppCompat.ProgressBar" />
    <style name="ProgressBar.Gone" parent="RelativelyCentered.Gone" />

    <style name="SpinnerLoader" parent="ProgressBar.Gone" />

</resources>

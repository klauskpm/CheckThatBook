<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RelativelyCentered">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="RelativelyCentered.Gone">
        <item name="android:visibility">gone</item>
    </style>

    <style name="SearchBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/interactive_item_height</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingStart">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="BooksGrid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:horizontalSpacing">@dimen/activity_horizontal_margin</item>
        <item name="android:numColumns">2</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:verticalSpacing">@dimen/activity_vertical_margin</item>
    </style>

    <style name="EmptyText" parent="RelativelyCentered.Gone" />

    <style name="ProgressBar" parent="Base.Widget.AppCompat.ProgressBar" />
    <style name="ProgressBar.Gone" parent="RelativelyCentered.Gone" />

    <style name="SpinnerLoader" parent="ProgressBar.Gone" />

    <style name="BookCard" />

    <style name="BookCard.BookContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="BookCard.BookThumbnail">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/book_thumbnail_height</item>
    </style>

    <style name="BookCard.BookContentContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/container_inner_margin</item>
    </style>

    <style name="BookCard.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="BookCard.Text.Title">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/highlighted_text_size</item>
    </style>

    <style name="BookCard.Text.Subtitle">
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="BookCard.Text.Price">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BookCard.Text.Price.Highlight">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="BookCard.Text.Price.Disabled">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

</resources>
